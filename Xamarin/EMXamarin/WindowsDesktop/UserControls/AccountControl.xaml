<UserControl x:Name="BasicAccountControl" x:Class="WindowsDesktop.UserControls.AccountControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Button x:Name="ColorThemeButton" Content="Color" HorizontalAlignment="Left" Margin="23,65,0,0" VerticalAlignment="Top" Width="57" Click="ColorThemeButton_Click"/>
        <Image x:Name="ThumbnailImage" HorizontalAlignment="Left" Height="100" Margin="94,37,0,0" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="NameTextBox" HorizontalAlignment="Left" Height="23" Margin="94,151,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="NameTextBox_TextChanged"/>
        <TextBlock x:Name="LabelTextBlock" HorizontalAlignment="Left" Margin="94,179,0,0" TextWrapping="Wrap" Text="First and Last name" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="AliasIconButton" Content="Icon" HorizontalAlignment="Left" Margin="220,65,0,0" VerticalAlignment="Top" Width="70" Click="AliasIconButton_Click"/>
    </Grid>
</UserControl>
