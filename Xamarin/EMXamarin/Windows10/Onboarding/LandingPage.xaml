<Page
    x:Class="Windows10.Onboarding.LandingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Windows10.Onboarding"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="400" 
    d:DesignWidth="300"
    >

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            <Button x:Name="MobileButton" 
                    Content="Mobile" 
                    HorizontalAlignment="Right" 
                    Margin="162,165,63,0" 
                    VerticalAlignment="Center" 
                    Width="75" 
                    Click="MobileButton_Click" 
                    Height="40"/>
            <Button x:Name="EmailButton" 
                    Content="Email" 
                    HorizontalAlignment="Left" 
                    Margin="72,165,0,0" 
                    VerticalAlignment="Center" 
                    Width="76" Height="40" Click="EmailButton_Click"/>
            <WebView x:Name="WebBrowser" 
                     HorizontalAlignment="Left" 
                     Height="207" 
                     Margin="10,10,0,0" 
                     VerticalAlignment="Top" 
                     Width="280"/>
    </Grid>
</Page>
