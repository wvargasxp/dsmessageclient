<Page
    x:Class="Windows10.Onboarding.MobileVerificationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Windows10.Onboarding"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="400" d:DesignWidth="300"
    >

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:Name="ContinueButton" Content="Verify" HorizontalAlignment="Center" Margin="0,214,0,0" VerticalAlignment="Top" Width="75" Click="ContinueButton_Click"/>
        <TextBox x:Name="VerificationTextBox" HorizontalAlignment="Center" Height="23" Margin="0,175,0,0" TextWrapping="Wrap" Text="qfakxz" VerticalAlignment="Top" Width="120" TextChanged="VerificationTextBox_TextChanged"/>
    </Grid>
</Page>
